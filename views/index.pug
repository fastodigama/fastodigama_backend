extends common/layout

block layout-content
    //- Home page: Simple welcome section
    .container.py-5
        .row.justify-content-center
            .col-lg-8.text-center
                //- Welcome heading
                h1.display-5.fw-bold.mb-3 Welcome to FASTOADMIN
                p.lead.text-muted.mb-4 Your professional content management system for fastodigama.com

                //- Quick action buttons
                if user
                    .btn-group.d-flex.flex-wrap.gap-2.justify-content-center(role="group")
                        a.btn.btn-primary.btn-lg(href="/admin/article") Articles
                        a.btn.btn-success.btn-lg(href="/admin/category") Categories
                        a.btn.btn-warning.btn-lg(href="/admin/menu") Menu
                        a.btn.btn-secondary.btn-lg(href="/user") My Account
                else
                    .btn-group.d-flex.flex-wrap.gap-2.justify-content-center(role="group")
                        a.btn.btn-primary.btn-lg(href="/login") Login
                        a.btn.btn-outline-primary.btn-lg(href="/register") Register

                //- Tagline
                p.mt-5.text-muted.fst-italic "Build boldly. Edit smartly. Publish with purpose."
