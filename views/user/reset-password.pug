extends ../common/layout

block layout-content
    //- Password reset form (admin only)
    .row.justify-content-center
        .col-md-6.col-lg-5
            h1.mb-4 Reset Password
            p.text-muted.mb-4
                | Resetting password for: 
                strong #{username}
            
            //- Show error message if reset failed
            if err
                .alert.alert-danger(role="alert") #{err}
            
            //- Password reset form
            form(action="/admin/users/reset", method="post")
                //- Hidden username field
                input(type="hidden", name="username", value=username)
                
                //- New password field
                .mb-3
                    label.form-label(for="newPassword") New Password
                    input.form-control(type="password", id="newPassword", name="newPassword", required, minlength="4")
                    small.form-text.text-muted Minimum 4 characters
                
                //- Confirm password field
                .mb-3
                    label.form-label(for="confirmPassword") Confirm Password
                    input.form-control(type="password", id="confirmPassword", name="confirmPassword", required, minlength="4")
                
                //- Submit and cancel buttons
                .d-flex.gap-2
                    button.btn.btn-warning.flex-grow-1(type="submit") Reset Password
                    a.btn.btn-secondary.flex-grow-1(href="/admin/users") Cancel
