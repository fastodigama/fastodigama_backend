extends ../common/layout

block layout-content
    //- ðŸŒŸ GOOGLE MATERIAL DARK THEME STYLES
    style.
        body {
            background-color: #202124 !important;
            color: #e8eaed !important;
        }
        .google-card {
            background-color: #303134;
            border: 1px solid #5f6368;
            border-radius: 12px;
        }
        .google-input {
            background-color: transparent !important;
            border: 1px solid #5f6368 !important;
            color: #e8eaed !important;
            border-radius: 4px;
            padding: 10px 14px;
            transition: border-color 0.2s, box-shadow 0.2s;
        }
        .google-input:focus {
            border-color: #8ab4f8 !important;
            box-shadow: inset 0 0 0 1px #8ab4f8 !important;
            outline: none;
        }
        /* Fix for Chrome autocomplete turning inputs yellow/white */
        input:-webkit-autofill,
        input:-webkit-autofill:hover, 
        input:-webkit-autofill:focus, 
        input:-webkit-autofill:active{
            -webkit-box-shadow: 0 0 0 30px #303134 inset !important;
            -webkit-text-fill-color: #e8eaed !important;
            transition: background-color 5000s ease-in-out 0s;
        }
        .google-btn-primary {
            background-color: #8ab4f8;
            color: #202124;
            border: none;
            border-radius: 24px;
            font-weight: 500;
            padding: 8px 24px;
            transition: background-color 0.2s;
        }
        .google-btn-primary:hover {
            background-color: #aecbfa;
        }
        .text-muted-google { color: #9aa0a6 !important; }

    .row.justify-content-center.mt-5.pt-5
        .col-md-6.col-lg-4
            .google-card.p-4.p-sm-5.shadow-lg
                .text-center.mb-4
                    h2.fw-normal.mb-2(style="letter-spacing: -0.5px;")
                        span(style="color: #8ab4f8;") FASTO
                        | DIGAMA
                    h4.fw-normal.mb-0 Sign in
                    p.text-muted-google.mt-2.small Use your administrator account

                //- Show error message if login failed
                if err
                    .alert.alert-danger.bg-danger.bg-opacity-25.text-danger.border-danger.border-opacity-50.rounded-3.small(role="alert") 
                        i.bi.bi-exclamation-circle.me-2
                        | #{err}

                //- Form submission sends credentials to /login
                form(action="/login", method="post", autocomplete="on")
                    //- Username field
                    .mb-4
                        label.form-label.text-muted-google.small.mb-1(for="u") Username
                        input.form-control.google-input(type="text", id="u", name="u", required)
                    
                    //- Password field
                    .mb-5
                        label.form-label.text-muted-google.small.mb-1(for="pw") Password
                        input.form-control.google-input(type="password", id="pw", name="pw", required)
                    
                    //- Submit button & Action area
                    .d-flex.justify-content-between.align-items-center
                        a.text-decoration-none.small.fw-medium(href="#", style="color: #8ab4f8;") Forgot password?
                        button.google-btn-primary(type="submit") Next

