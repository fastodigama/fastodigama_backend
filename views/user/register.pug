extends ../common/layout

block layout-content
    .row.justify-content-center
        .col-md-6.col-lg-4
            h1.mb-4 Register
            if err
                .alert.alert-danger(role="alert") #{err}
            form(action="/register", method="post")
                .mb-3
                    label.form-label(for="u") Username
                    input.form-control(type="text", id="u", name="u", required)
                .mb-3
                    label.form-label(for="pw") Password
                    input.form-control(type="password", id="pw", name="pw", required)
                button.btn.btn-primary.w-100(type="submit") Register
            
            p.mt-3.text-center
                | Already have an account? #[a(href="/login") Log in now]