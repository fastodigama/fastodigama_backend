extends ../common/layout

block layout-content
    //- Registration form page
    .row.justify-content-center
        .col-md-6.col-lg-4
            h1.mb-4 Register
            //- Show error message if registration failed
            if err
                .alert.alert-danger(role="alert") #{err}
            //- Form submission sends credentials to /register
            form(action="/register", method="post")
                //- Username field
                .mb-3
                    label.form-label(for="u") Username
                    input.form-control(type="text", id="u", name="u", required)
                //- Password field
                .mb-3
                    label.form-label(for="pw") Password
                    input.form-control(type="password", id="pw", name="pw", required)
                //- Submit button
                button.btn.btn-primary.w-100(type="submit") Register
            
            //- Link to login page if user already has account
            p.mt-3.text-center
                | Already have an account? #[a(href="/login") Log in now]