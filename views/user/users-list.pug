extends ../common/layout

block layout-content
    //- User management page: list all users with password reset options
    .d-flex.justify-content-between.align-items-center.mb-4
        h1.mb-0 Manage Users
        .d-flex.gap-2
            a.btn.btn-primary.btn-sm(href="/register") Register New User
            a.btn.btn-success.btn-sm(href="/admin/article") Back to Admin

    //- Table view for users
    .table-responsive
        if users && users.length > 0
            table.table.table-striped.table-hover.align-middle
                //- Table headers
                thead.table-dark
                    tr
                        th(style="width: 70%") Username
                        th.text-center(style="width: 30%") Actions
                //- Table body: Loop through each user
                tbody
                    each user in users
                        tr
                            //- Username
                            td
                                strong #{user.user}
                            //- Action buttons
                            td.text-center
                                .d-flex.gap-2.justify-content-center
                                    a.btn.btn-sm.btn-warning(href=`/admin/users/reset?username=${user.user}`) Reset Password
                                    a.btn.btn-sm.btn-info(href=`/admin/users/edit?username=${user.user}`) Edit
                                    a.btn.btn-sm.btn-danger(href=`/admin/users/delete?username=${user.user}`, onclick="return confirm('Are you sure you want to delete this user?')") Delete
        else
            .alert.alert-info No users found
