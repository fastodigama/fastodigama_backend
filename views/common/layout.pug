doctype html
//- Base layout template for all pages
html(lang="en")
    head
        //- Page metadata and styling setup
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="shortcut icon", href="/img/favicon.ico", type="image/x-icon")
        //- Load Bootstrap CSS for styling
        link(rel="stylesheet", href="/bootstrap/css/bootstrap.min.css")
        title #{title} | FASTOADMIN

    //- Main page structure: header, content, footer
    body.d-flex.flex-column.min-vh-100
        //- Include navigation bar from header.pug
        include header.pug
        //- Content area - filled by each page
        main.flex-fill.container.my-5
            //- Dynamic main content here (replaced by specific page content)
            block layout-content

        //- Footer matching header style
        footer.bg-dark.text-white.px-4.py-3.mt-auto
            .d-flex.flex-column.flex-md-row.align-items-center.justify-content-between.gap-2
                .d-flex.align-items-center.gap-2
                    img.d-inline-block.align-top(src="/img/apple-touch-icon.png", width="24", height="24")
                    span.fw-bold FASTOADMIN
                p.mb-0.text-white-50.small &copy; #{new Date().getFullYear()} FASTODIGAMA ADMIN. All rights reserved.

        //- Bootstrap JavaScript for interactive elements
        script(src="/bootstrap/js/bootstrap.bundle.min.js")
        //- Block for page-specific scripts
        block scripts
